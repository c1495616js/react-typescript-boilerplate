{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "assets/*": ["src/assets/*"],
      "*": ["src/shared/*", "test/*"]
    }
  },
  "include": ["src/**/*", "./typings/*.d.ts"],
  "exclude": [
    "./node_modules",
    "./build",
    "./scripts",
    "./docker",
    "./public",
    "./coverage"
  ]
}
